
{% schema %}
{
  "name": "Banner-custom",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "banner_description",
      "label": "Banner Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "banner_button_text",
      "label": "Banner Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "banner_button_link",
      "label": "Banner Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "banner_footer_text",
      "label": "Banner Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    }
  ],
  "presets": [
    {
      "name": "Banner-custom",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="banner-custom">
  <div class="banner-custom-header">
    <div class="heading">{{ section.settings.heading }}</div>
    <div class="text">{{ section.settings.text }}</div>
    <a href="{{ section.settings.button_link }}" class="header-btn">{{ section.settings.button_text }}</a>
  </div>

  <div class="banner-custom-content">
    <div class="banner-custom-text">
      <h1>{{ section.settings.banner_heading }}</h1>
      <p>{{ section.settings.banner_description }}</p>
      <a href="{{ section.settings.banner_button_link }}" class="banner-btn">{{ section.settings.banner_button_text }}</a>
    </div>
  </div>

  <div class="banner-custom-footer">{{ section.settings.banner_footer_text }}</div>
</div>


<style>
.banner-custom {
  font-family: Arial, sans-serif;
  position: relative;
  background: #fff;
  overflow: hidden;
}

.banner-custom-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5px 50px;
  background-color: #f6f6f6;
}
.banner-custom-header .heading {
  font-weight: bold;
  font-size: 20px;
}
.banner-custom-header .text {
  font-size: 14px;
}
.banner-custom-header .header-btn {
  background-color:#FFDD00;
  color: #000;
  padding: 5px 20px;
  border: none;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.3s, transform 0.3s;
  text-decoration: none;
  display: inline-block;
}
.banner-custom-header .header-btn:hover {
  background-color:#ffd633;
  transform: scale(1.05);
}

.banner-custom-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 40px 20px;
  background-image: url('{{ section.settings.banner_image | img_url: "master" }}');
  background-size: cover;
  background-position: center;
  height: 500px;
}
.banner-custom-text {
  padding: 30px;
  border-radius: 10px;
  max-width: 500px;
}
.banner-custom-text h1 {
  font-size: 42px;
  margin-bottom: 20px;
  font-weight: 700;
}
.banner-custom-text p {
  font-size: 13px;
  margin-bottom: 20px;
}
.banner-custom-text .banner-btn {
  background-color: #000;
  color: #fff;
  padding: 12px 25px;
  border: none;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.3s, transform 0.3s;
  text-decoration: none;
  display: inline-block;
}
.banner-custom-text .banner-btn:hover {
  background-color: #333;
  transform: scale(1.05);
}

.banner-custom-footer {
  text-align: center;
  font-size: 12px;
  color: #777;
  padding: 3px;
  background-color:#f6f6f6;
}

/* Responsive */
@media (max-width: 768px) {
  .banner-custom-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
    padding: 3px 25px;
    flex-wrap: nowrap;
  }
  .banner-custom-header .heading {
    font-size: 25px;
  }
  .banner-custom-header .text {
    display: none;
  }
  .banner-custom-header .header-btn {
    padding: 8px 16px;
    font-size: 13px;
  }
  .banner-custom-content {
    flex-direction: row;
    justify-content: center;
    text-align: center;
    padding: 20px 15px;
    height: 400px;
  }
  .banner-custom-text {
    max-width: 100%;
    padding: 1rem 1rem 18rem 1rem;
  }
  .banner-custom-text h1 {
    font-size: 28px;
    margin-bottom: 15px;
  }
  .banner-custom-text p {
    font-size: 12px;
    margin-bottom: 15px;
  }
  .banner-custom-text .banner-btn {
    padding: 10px 20px;
    font-size: 13px;
  }
  .banner-custom-footer {
    font-size: 11px;
    padding: 3px;
  }
}

@media (max-width: 480px) {
  .banner-custom-text h1 {
    font-size: 24px;
  }
  .banner-custom-text p {
    font-size: 11px;
  }
  .banner-custom-text .banner-btn {
    font-size: 12px;
    padding: 8px 16px;
  }
}
</style>
